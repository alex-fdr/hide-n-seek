{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "AdobeAn": "readonly",
        "createjs": "readonly",
        "APP_INFO": "readonly",
        "SCREENS": "readonly",
        "PA": "readonly",
        "GM": "readonly",
        "NUC": "readonly",
        "RES": "readonly",
        "THREE": "readonly",
        "TWEEN": "readonly",
        "CANNON": "readonly",
        "Phaser": "readonly",
        "signals": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "plugins": [],
    "settings": {
        "import/resolver": {
            "alias": {
                "map": [
                    [
                        "@src",
                        "./src"
                    ],
                    [
                        "@components",
                        "./node_modules/@playworks/pa-library/dist/components"
                    ],
                    [
                        "@libs",
                        "./node_modules/@playworks/pa-library/dist/libs"
                    ],
                    [
                        "@utils",
                        "./node_modules/@playworks/pa-library/dist/utils"
                    ]
                ],
                "extensions": [
                    ".js",
                    ".ts"
                ]
            }
        }
    },
    "rules": {
        "lines-between-class-members": [
            "error",
            "always",
            {
                "exceptAfterSingleLine": true
            }
        ],
        "no-useless-constructor": "off",
        "no-bitwise": "off",
        "no-return-assign": "off",
        "no-param-reassign": "off",
        "no-plusplus": "off",
        "import/prefer-default-export": "off",
        "import/extensions": "off",
        "import/no-extraneous-dependencies": "off",
        "class-methods-use-this": "off",
        "no-prototype-builtins": "off",
        "object-curly-newline": [
            "error",
            {
                "consistent": true
            }
        ],
        "semi": "off",
        "comma-dangle": "off",
        "no-trailing-spaces": "off",
        "eol-last": "off"
    }
}