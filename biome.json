{
    "$schema": "https://biomejs.dev/schemas/2.3.3/schema.json",
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    },
    "files": {
        "ignoreUnknown": false,
        "includes": [
            "./src/**",
            "!./src/libs"
        ]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 100
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "style": {
                "useConst": "on"
            }
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single"
        }
    },
    "assist": {
        "enabled": true,
        "actions": {
            "source": {
                "organizeImports": {
                    "level": "on",
                    "options": {
                        "identifierOrder": "natural",
                        "groups": [
                            ":PACKAGE:",
                            [
                                "**/core/**",
                                "**/components/**"
                            ],
                            [
                                "**/helpers/**"
                            ],
                            [
                                "**/assets/**"
                            ]
                        ]
                    }
                }
            }
        }
    }
}