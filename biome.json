{
    "$schema": "https://biomejs.dev/schemas/2.3.3/schema.json",
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    },
    "files": {
        "ignoreUnknown": false
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 80,
        "includes": [
            "**",
            "!**/tiger-player.js",
            "!**/tiger-ai.js",
            "!**/libs/**"
        ]
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "style": {
                "useConst": "on"
            }
        },
        "includes": [
            "**",
            "!**/tiger-player.js",
            "!**/libs/**"
        ]
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single"
        }
    },
    "assist": {
        "enabled": true,
        "includes": [
            "**",
            "!**/tiger-player.js",
            "!**/libs/**"
        ],
        "actions": {
            "source": {
                "organizeImports": {
                    "level": "on",
                    "options": {
                        "identifierOrder": "natural",
                        "groups": [
                            ":PACKAGE:",
                            "*/*",
                            "*/core/**",
                            "**/components/**",
                            "**/helpers/**",
                            "*/models/**",
                            "*/ui/**",
                            "**/assets/settings/*",
                            "!**/assets/**",
                            ":BLANK_LINE:",
                            "**/assets/models/*",
                            "**/assets/textures/*",
                            ":BLANK_LINE:",
                            "**/assets/fonts/*",
                            "**/assets/images/*",
                            ":BLANK_LINE:"
                        ]
                    }
                }
            }
        }
    }
}